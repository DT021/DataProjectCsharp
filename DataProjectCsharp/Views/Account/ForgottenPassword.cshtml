@model ForgottenPasswordModel
@{
    ViewData["Title"] = "ForgottenPassword";
}

<h1>Password Reset</h1>

<div class="row">
    <div class="col-md-4">
        <p class="alert alert info">
            Forgotten your password? Enter your e-mail address below, 
            and we'll send you an e-mail allowing you to reset it.
        </p>
        <form asp-action="ForgottenPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Reset my Password" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}