@model DataProjectCsharp.Models.Trade


<div class="modal fade" id="addTrade" style="z-index:1055;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class=" = modal-header">
                <h5 class="modal-title" id="addTradeLabel">Add a new Trade</h5>
                <button type="button" class="close" onclick="$('#addTrade').modal('hide');" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--<div class="text-danger" asp-validation-summary="All"></div>-->
                <form method="post" asp-action="AddTrade" asp-controller="Trade">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input asp-for="PortfolioId" type="hidden" value="@Model.PortfolioId" />
                    <input asp-for="CreatedTimeStamp" type="hidden" value="@Model.CreatedTimeStamp" />
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Ticker">Ticker</label>
                        </div>
                        <div class="col-6">
                            <input asp-for="Ticker" class="form-control" />
                            <span asp-validation-for="Ticker" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <label asp-for="Quantity">Quantity</label>
                        </div>
                        <div class="col-6">
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <label asp-for="Price">Price</label>
                        </div>
                        <div class="col-6">
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <label asp-for="TradeDate">Trade Date</label>
                        </div>
                        <div class="col-6">
                            <input asp-for="TradeDate" class="form-control" value="@Model.TradeDate.Date.ToString("s")" />
                            <span asp-validation-for="TradeDate" class="text-danger"></span>
                        </div>
                        <div class="col-4">
                            <label asp-for="Comments">Comments</label>
                        </div>
                        <div class="col-6">
                            <textarea asp-for="Comments" class="form-control"></textarea>
                            <span asp-validation-for="Comments" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal-trade">Save changes</button>
                <button type="button" class="btn btn-secondary" onclick="$('#addTrade').modal('hide');">Cancel</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}