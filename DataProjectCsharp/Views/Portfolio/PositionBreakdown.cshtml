@model DataProjectCsharp.Models.DataViewModels.PositionDataVM
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<a class="text-primary" asp-action="PortfolioBreakdown" asp-route-id="@Model.PortfolioId">Got back to @Model.PortfolioName Breakdown</a>
<h1>Portfolio: @Model.PortfolioName</h1>
<h4 class="text-muted">Performance breakdown for @Model.PositionObject.symbol</h4>

<div class="container">
    <div class="row">
        <div class="col-3">
            <div class="card border-success mb-3">
                <div class="card-header font-weight-bold">@Model.PositionObject.symbol Summary</div>
                <div class="card-body text-success">
                    <span class="card-text">Quantity: @Model.PositionObject.netQuantity</span>
                    <br />
                    <span class="card-text" >Average Cost: @Model.PositionObject.averageCost.ToString("#0.00")</span>
                </div>
            </div>
        </div>
        <div class="col-9">
            <canvas id="myChart"></canvas>
        </div>
    </div>
</div>
<!-- NOTE TO SELF: The positionData object needs to be able to work if multiple trades happen on the same date
    i.e. if trade date == the previous date in the breakdown then overide the last date in the breakdown with the current date.
    -->
<div class="col-12">
    <table class="table table-striped table-bordered" style="width:100%" id="PositionPerformance">
        <thead>
            <tr>
                <th>Date</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Average Cost</th>
                <th>Performance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model.PositionObject.GetDailyPerformance().Rows)
            {
                <tr>
                    <td>@row[0]</td>
                    <td>@row[2]</td>
                    <td>@row[1]</td>
                    <td>@row[3]</td>
                    <td>@row[5]%</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="line-chart-container">
    <canvas id="myChart"></canvas>
</div>


@section scripts {
    <script>
        $(document).ready(function () {
            $('#PositionPerformance').DataTable({
                "pageLength": 5,
                "order": [0, 'desc'],
                "searching": false,
                "columnDefs": [{ 'type': 'date-eu', 'targets': 0 }],
            });
        });
    </script>

    <script>
        var dates = [];
        var performance = [];
        @foreach(var row in Model.PositionObject.GetDailyPerformance().Rows)
        {
            @:dates.push("@row[0]");
            @:performance.push("@row[5]");
        }
        var ctx = document.getElementById('myChart');
    var myChart = new Chart(ctx, {
        type: 'line',
        tooltipCaretSize: 10,
        maintainAspectRatio: false,
        data: {
            labels: dates,
            datasets: [{
                label: '%',
                data: performance,
                backgroundColor: [
                    'rgba(94, 255, 137, 0.2)'
                ],
                borderColor: ["rgba(5, 38, 14, 1)"],
                borderWidth: 2,
                pointBorderWidth: 1,
                pointBorderColor: 'rgba(40, 106, 176, 1)'
            }]
        },
        options: {
          responsive:true,
          tooltips: {
            mode: "index",
            intersect:false,
          },
          hover:{
            mode: "nearest",
            intersect: true,
          },
          legend: {
            display: false,
            labels: {
              fontColor: "#d4eaff"
            }
          },
          title: {
            display: true,
            text: "@Model.PositionObject.symbol Performance for @Model.PortfolioName",
            fontColor: "#2ed95b"
          },
          layout: {
            padding:{
              left: 20,
              right: 20,
              top: 0,
              bottom: 0
            }
          },
            scales: {
                xAxes: [{
                    
                  scaleLabel:{
                    display: true,
                    labelString: "Date",
                    fontColor: "#2ed95b"
                  },
                    ticks: {
                        fontColor: "#d4eaff",
                        autoSkip: true,
                        maxTicksLimit: 6,
                        maxRotation: 15,
                        minRotation:15
                    }
                }],
                yAxes: [{
                  display:true,
                  scaleLabel:{
                    fontColor: "#2ed95b",
                    display: true,
                    labelString:"Performance (%)"
                  },
                  ticks:{
                    fontColor: "#d4eaff",
                  }
                }]
            }
        }
    });
    </script>
}