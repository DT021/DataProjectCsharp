@model IEnumerable<DataProjectCsharp.Models.TradeableSecurities>

<div class="modal fade" id="ShowTradeableSecurities">
    <div class="modal-dialog mw-100 w-75">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ShowTradeableSecuritiesLabel">Tradeable Securities</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>The below table is a large collection of the securities that you are able to trade.</p>
                    <table class="table table-striped table-bordered" id="SecuritiesTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Ticker</th>
                                <th>Domiciled</th>
                                <th>BenchmarkIndex</th>
                                <th>ISO Code</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (TradeableSecurities security in @Model)
                            {
                            <tr>
                                <td>@security.Name</td>
                                <td>@security.Ticker</td>
                                <td>@security.Country</td>
                                <td>@security.BenchmarkIndex</td>
                                <td>@security.ISOAlphaCode</td>
                            </tr>
                            }
                        </tbody>
                    </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal-portfolio">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#SecuritiesTable').DataTable({
        });
    });
</script>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}